<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.company.workshop.web.worker.WorkerBrowse"
        focusComponent="workersTable"
        lookupComponent="workersTable"
        messagesPack="com.company.workshop.web.worker">
    <dsContext>
        <groupDatasource id="workersDs"
                         class="com.company.workshop.entity.Worker"
                         view="worker-view">
            <query>
                <![CDATA[select e from workshop$Worker e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="workersTable"
            spacing="true">
        <filter id="filter"
                applyTo="workersTable"
                datasource="workersDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="workersTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="user"/>
                <column id="hourlyRate"/>
            </columns>
            <rows datasource="workersDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="workersTable.create"/>
                <button id="editBtn"
                        action="workersTable.edit"/>
                <button id="removeBtn"
                        action="workersTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
